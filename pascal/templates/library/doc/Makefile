PROJECT_NAME=someproject
PROJECT_VERSION=0.0.1-SNAPSHOT
INSTALL_PREFIX=../install
PROJECT_BINARY_DIR=../target

############### Default directory locations ###############
DOCUMENT_OUTPUT_DIRECTORY=$(PROJECT_BINARY_DIR)/doc
RUNTIME_OUTPUT_DIRECTORY=$(PROJECT_BINARY_DIR)/bin
LIBRARY_OUTPUT_DIRECTORY=$(PROJECT_BINARY_DIR)/lib
AUTODOC_OUTPUT_DIRECTORY=$(DOCUMENT_OUTPUT_DIRECTORY)/autodocs

html:
pdf:

install: html pdf
	-$(MKDIR) $(INSTALL_PREFIX)
	-$(MKDIR) $(INSTALL_PREFIX)/doc/$(PROJECT_NAME)/$(PROJECT_VERSION)
	-$(CP) -r $(DOCUMENT_OUTPUT_DIRECTORY)/. $(INSTALL_PREFIX)/doc/$(PROJECT_NAME)/$(PROJECT_VERSION)

package:
